<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE shardingConfig PUBLIC "-//shardbatis.googlecode.com//DTD Shardbatis 2.0//EN"
        "http://shardbatis.googlecode.com/dtd/shardbatis-config.dtd">
<shardingConfig>
    <!--
        parseList可选配置
        如果配置了parseList,只有在parseList范围内并且不再ignoreList内的sql才会被解析和修改
    -->
<!--    <ignoreList>
        <value>com.example.repository.UserMapper.deleteByPrimaryKey</value>
    </ignoreList>-->
    <parseList>
        <value>com.example.repository.UserMapper.insertSelective</value>
        <value>com.example.repository.UserMapper.selectByPrimaryKey</value>
        <value>com.example.repository.UserMapper.updateByPrimaryKeySelective</value>
    </parseList>
    <!--
        配置分表策略
        tableName指的是实际的表名，strategyClass对应的分表策略实现类
    -->
    <strategy tableName="user" strategyClass="com.example.service.impl.UserShardStrategyImpl"/>
</shardingConfig>